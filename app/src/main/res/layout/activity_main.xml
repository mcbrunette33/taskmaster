<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3BF4E3"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="133dp"
        android:layout_height="112dp"
        android:layout_marginStart="139dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="139dp"
        android:fontFamily="cursive"
        android:text="My Tasks"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/allTasks"
        style="@android:style/Widget.DeviceDefault.Button"
        android:layout_width="115dp"
        android:layout_height="65dp"
        android:layout_marginTop="388dp"
        android:layout_marginEnd="28dp"
        android:text="All Tasks"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userDetailButton" />

    <Button
        android:id="@+id/addTaskButton"
        style="@android:style/Widget.DeviceDefault.Button"
        android:layout_width="115dp"
        android:layout_height="65dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="79dp"
        android:layout_marginBottom="69dp"
        android:text="add task"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/taskThree" />

    <ImageButton
        android:id="@+id/userDetailButton"
        android:layout_width="45dp"
        android:layout_height="46dp"
        android:layout_marginEnd="49dp"
        android:background="#E91E63"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="52dp"
        android:fontFamily="cursive"
        android:text="Settings"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/taskDetailsButton"
        style="@android:style/Widget.DeviceDefault.Button"
        android:layout_width="115dp"
        android:layout_height="65dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="246dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="71dp"
        android:text="Task Details"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/allTasks"
        app:layout_constraintStart_toEndOf="@+id/addTaskButton"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/taskOne"
        android:layout_width="96dp"
        android:layout_height="38dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="249dp"
        android:fontFamily="monospace"
        android:text="Task One"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/taskTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="30dp"
        android:fontFamily="monospace"
        android:text="Task Two"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/taskOne" />

    <TextView
        android:id="@+id/taskThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="34dp"
        android:fontFamily="monospace"
        android:text="Task Three"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/taskTwo" />

</androidx.constraintlayout.widget.ConstraintLayout>